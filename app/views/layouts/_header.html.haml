%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  = image_tag 'shiba-inu', size: '30x30'
  %a.navbar-brand{href: root_path} Shibainu
  %button.navbar-toggler{"aria-controls" => "navbarText", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarText", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarText.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item.active
        = link_to "Home", root_path, class:"nav-link"
        %span.sr-only (current)
      - if user_signed_in?
        %li.nav-item
          .nav-link
            サインイン中
        %li.nav-item
          = link_to "サインアウト", destroy_user_session_path, method: :delete, class:"nav-link"
      - else
        %li.nav-item
          = link_to "サインアップ", new_user_registration_path, class:"nav-link"
        %li.nav-item
          = link_to "サインイン", new_user_session_path, class:"nav-link"
    %span.navbar-text
      -# Navbar text with an inline element